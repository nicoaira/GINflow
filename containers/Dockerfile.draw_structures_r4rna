FROM r-base:4.3.0

# Install system dependencies for R packages and Python
RUN apt-get update && DEBIAN_FRONTEND=noninteractive \
    apt-get install -y --no-install-recommends \
        python3 \
        python3-pip \
        python3-pandas \
        libcurl4-openssl-dev \
        libssl-dev \
        libxml2-dev \
        libfontconfig1-dev \
        libharfbuzz-dev \
        libfribidi-dev \
        libfreetype6-dev \
        libpng-dev \
        libtiff5-dev \
        libjpeg-dev \
        git \
        procps \
    && rm -rf /var/lib/apt/lists/*

# Install BiocManager and R4RNA from Bioconductor
RUN R -e "install.packages('BiocManager', repos='http://cran.rstudio.com/')" && \
    R -e "BiocManager::install('R4RNA')"

# Set working directory
WORKDIR /app

# Copy pipeline code
COPY main.nf nextflow.config ./
COPY workflows/ workflows/
COPY bin/ bin/

# Make scripts executable
RUN chmod +x bin/*.py || true

# Set PATH to ensure Rscript is available
ENV PATH="/usr/local/bin:${PATH}"
